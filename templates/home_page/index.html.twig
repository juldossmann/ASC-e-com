<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ASC e-commerce{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('home') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('homePageJs') }}
        {% endblock %}

    </head>
    <body>


        <div class="mainContainer">
            <div class="containerLeftSide"> 
                <div class="menuSideBar">
                    <form action="/action_page.php">
                    <input type="text" placeholder="Search.." name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>

                {% for categories in categories %}
                <button class="menuSideBar"> > {{ categories.name }} </button>
                {% endfor %}
                
            </div>
                <button id="myBtn" title="Go to top" class="boutonHautDePage"> ↑ </button>
                <div class="boutonLogo">
                    <div class="titre"> ASC e-Commerce</div>
                </div>
            <div class="containerCentral">
            <div class="coinPromos">
                    <div class="containerPromo1">
                        <div class="promo1">
                            <div class="containerImagePromo">   Promo !</div>
                           
                        </div>
                    </div>
                    <div class="containerPromo2">
                        <div class="promo2">
                            <div class="containerImagePromo">   Promo !</div>
                           
                        </div>
                        <div class="promo3">
                            <div class="containerImagePromo">   Promo !</div>
                           
                        </div>
                    </div>
                   </div> 
                
                <div class="carousel">


                </div>
                <div class="containerPreviews">
                    {% for categories in categories %}
               
                    <div class="preview" {#name="{{categories.name}}"#}>
                        <div class="surtexte"> {{ categories.name }} </div>
                    </div>
                    {% endfor %}
                </div>
            
            </div>
            <div class="containerRightSide">
                <button class="boutonEspaceClient">Espace client</button>
                <button class="boutonPanier">Piano</button>
                <button class="boutonMentionsLegales">Mentions légales</button>
            </div>        
                
        
        </div>

    </body>

  </body>
</html>

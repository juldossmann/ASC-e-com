			{{form_row(formA.postal_adress, {'label': 'Adresse'})}}
			{{form_row(formA.postal_adress_2, {'label': 'Complément d\'adresse'})}}
	{{form_row(formA.zip_code, {'label': 'Code postal'})}}
	{{form_row(formA.city, {'label': 'Ville'})}}
	{{form_row(formA.country, {'label': 'Pays'})}}
	{{form_row(formA.phone_number, {'label': 'Numéro de téléphone'})}}
	{{form_row(formA.adress_name, {'label': 'Nom attribué à l\'adresse'})}}
<button type="submit" class="btn btn-success">Sauvegarder les modifications</button>
		{{form_end(formA)}}
